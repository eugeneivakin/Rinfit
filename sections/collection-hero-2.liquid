{% comment %}
  Gemstone Collection Section - PIXEL PERFECT Desktop & Mobile
{% endcomment %}

<style>
  .gemstone-collection {
    width: 100%;
    background-color: {{ section.settings.background_color }};
    padding: {{ section.settings.section_padding_top }}px 0 {{ section.settings.section_padding_bottom }}px;
  }

  /* DESKTOP STYLES */
  .gemstone-collection__container {
    display: flex;
    align-items: center;
    gap: 40px;
    padding: 0 80px;
    max-width: none;
  }

  .gemstone-collection__image {
    flex-shrink: 0;
    width: 629px;
    height: 460px;
    border-radius: 10px;
    background-repeat: no-repeat;
    background-position: 0% 64.64%;
    background-size: 100% 205.01%;
    {% if section.settings.image %}
      background-image: url('{{ section.settings.image | img_url: 'master' }}');
    {% endif %}
  }


  @media (min-width: 769px) and (max-width: 1240px) {
    .gemstone-collection__image {
      width: 50%;
      object-fit: cover;
      background-size: cover;
    }
  }
  .gemstone-collection__content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 40px;
    min-width: 1px;
  }

  .gemstone-collection__text {
    display: flex;
    flex-direction: column;
    gap: 40px;
    align-items: center;
    width: 100%;
  }

  /* DESKTOP TITLE */
  .gemstone-collection__title-desktop {
    color: {{ section.settings.title_color }};
    line-height: 30px;
    margin: 0;
    width: 100%;
    text-align: left;
  }

  .gemstone-collection__title-light {
    font-family: 'Kumbh Sans', sans-serif;
    font-weight: 300;
    font-size: 46px;
    text-transform: capitalize;
  }

  .gemstone-collection__title-italic {
    font-family: 'Playfair Display', serif;
    font-weight: 400;
    font-style: italic;
    font-size: 53px;
    letter-spacing: -1.06px;
    text-transform: capitalize;
  }

  /* MOBILE TITLES - HIDDEN ON DESKTOP */
  .gemstone-collection__title-mobile-first,
  .gemstone-collection__title-mobile-second {
    display: none;
  }

  .gemstone-collection__description {
    font-family: 'Kumbh Sans', sans-serif;
    font-weight: 400;
    font-size: 14px;
    line-height: 20px;
    color: {{ section.settings.description_color }};
    margin: 0;
    width: 100%;
  }

  .gemstone-collection__button {
    display: inline-flex;
    border: 1px solid;
    align-items: center;
    justify-content: center;
    background-color: {{ section.settings.button_background }};
    color: {{ section.settings.button_text_color }};
    padding: 15px 20px;
    border-radius: 4px;
    text-decoration: none;
    font-family: 'Kumbh Sans', sans-serif;
    font-weight: 600;
    font-size: 14px;
    text-transform: uppercase;
    transition: all 0.3s ease;
    align-self: flex-start;
  }
  .gemstone-collection__button:hover{
    background: none;
    color: #232222;
    border-color:#C5C1C0;
  }

  @media (min-width: 769px) and (max-width: 1240px) {
    .gemstone-collection__container {
      gap: 25px;
      padding: 0px 10px;
    }
  }
  /* MOBILE RESPONSIVE */
  @media (max-width: 768px) {
    .gemstone-collection {
      background-color: {{ section.settings.mobile_background_color }};
    }

    .gemstone-collection__container {
      flex-direction: column;
      gap: 20px;
      padding: 20px;
      align-items: flex-start;
      justify-content: center;
    }

    .gemstone-collection__image {
      width: 100%;
      height: 320px;
      background-position: 0% 83.94%;
      background-size: 100% 163.98%;
    }

    .gemstone-collection__content {
      gap: 30px;
      align-items: center;
      justify-content: center;
      width: 100%;
    }

    .gemstone-collection__text {
      gap: 20px;
      align-items: center;
      text-align: center;
    }

    /* HIDE DESKTOP TITLE ON MOBILE */
    .gemstone-collection__title-desktop {
      display: none;
    }

    /* SHOW MOBILE TITLES */
    .gemstone-collection__title-mobile-first,
    .gemstone-collection__title-mobile-second {
      display: block;
      color: {{ section.settings.title_color }};
      margin: 0;
    }

    .gemstone-collection__title-mobile-first {
      font-family: 'Kumbh Sans', sans-serif;
      font-weight: 300;
      font-size: 20px;
      line-height: 20px;
      margin-bottom: -10px;
      text-transform: capitalize;
    }

    .gemstone-collection__title-mobile-second {
      font-size: 46px;
      line-height: 46px;
    }

    .gemstone-collection__title-mobile-second .light {
      font-family: 'Kumbh Sans', sans-serif;
      font-weight: 300;
      text-transform: capitalize;
    }

    .gemstone-collection__title-mobile-second .italic {
      font-family: 'Playfair Display', serif;
      font-weight: 400;
      font-style: italic;
      letter-spacing: -0.92px;
      text-transform: capitalize;
    }

    .gemstone-collection__description {
      color: {{ section.settings.mobile_description_color }};
      line-height: 22px;
      text-align: left;
    }

    .gemstone-collection__button {
      align-self: center;
    }
  }
</style>

<section class="gemstone-collection">
  <div class="gemstone-collection__container">
    
    {% if section.settings.image %}
      <div class="gemstone-collection__image"></div>
    {% endif %}
    
    <div class="gemstone-collection__content">
      <div class="gemstone-collection__text">
        
        <!-- DESKTOP TITLE -->
        {% if section.settings.title_part_1 and section.settings.title_part_2 %}
          <h2 class="gemstone-collection__title-desktop">
            <span class="gemstone-collection__title-light">{{ section.settings.title_part_1 }}</span> <span class="gemstone-collection__title-italic">{{ section.settings.title_part_2 }}</span>
          </h2>
        {% endif %}
        
        <!-- MOBILE TITLES -->
        <p class="gemstone-collection__title-mobile-first">meet</p>
        <p class="gemstone-collection__title-mobile-second">
          <span class="light">Gemstone</span> <span class="italic">Collection</span>
        </p>
        
        {% if section.settings.description %}
          <p class="gemstone-collection__description">{{ section.settings.description }}</p>
        {% endif %}
        
      </div>
      
      {% if section.settings.button_text and section.settings.button_url %}
        <a href="{{ section.settings.button_url }}" class="gemstone-collection__button">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
      
    </div>
  </div>
</section>

