{{ 'instagram-feed.css' | asset_url | stylesheet_tag }}

<section
  id="shopify-section-{{ section.id }}"
  class="instagram-section"
  style="
    --section-text-color: {{ section.settings.text_color }};
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    --section-padding-left: {{ section.settings.padding_left }}px;
    --section-padding-right: {{ section.settings.padding_right }}px;
  "
>
  <div class="instagram-container">
    <div class="instagram-title">
      <h2 class="instagram-heading">
        <span class="instagram-heading-light">shop our</span>
        <span class="instagram-heading-italic"> instagram</span>
      </h2>
      {% if section.settings.instagram_handle != blank %}
        {% comment %}
          <a href="https://instagram.com/{{ section.settings.instagram_handle | remove: '@' }}"
          class="instagram-button"
          target="_blank"
          rel="noopener noreferrer">
        {% endcomment %}
        <div class="instagram-button">@{{ section.settings.instagram_handle | remove: '@' }}</div>
        {% comment %} </a> {% endcomment %}
      {% endif %}
    </div>

    <div class="instagram-images">
      {% comment %} Desktop Layout {% endcomment %}
      {% if section.blocks.size > 0 %}
        {% assign main_image = section.blocks.first %}
        <div class="instagram-main-image">
          {% if main_image.settings.image %}
            {% comment %}
              {% if main_image.settings.url != blank %}
                <a href="{{ main_image.settings.url }}"
                   {% if main_image.settings.open_in_new_tab %}target="_blank" rel="noopener noreferrer"{% endif %}>
                  <img src="{{ main_image.settings.image | image_url: width: 522 }}"
                       alt="{{ main_image.settings.alt_text | default: 'Instagram post' | escape }}"
                       loading="lazy">
                </a>
              {% else %}
            {% endcomment %}
            <img
              src="{{ main_image.settings.image | image_url: width: 522 }}"
              alt="{{ main_image.settings.alt_text | default: 'Instagram post' | escape }}"
              loading="lazy"
            >
            {% comment %} {% endif %} {% endcomment %}
          {% endif %}
        </div>
      {% endif %}

      <div class="instagram-grid">
        <div class="instagram-grid-row">
          {% for block in section.blocks limit: 3 offset: 1 %}
            <div class="instagram-grid-item" {{ block.shopify_attributes }}>
              {% if block.settings.image %}
                {% comment %}
                  {% if block.settings.url != blank %}
                    <a href="{{ block.settings.url }}"
                       {% if block.settings.open_in_new_tab %}target="_blank" rel="noopener noreferrer"{% endif %}>
                      <img src="{{ block.settings.image | image_url: width: 233 }}"
                           alt="{{ block.settings.alt_text | default: 'Instagram post' | escape }}"
                           loading="lazy">
                    </a>
                  {% else %}
                {% endcomment %}
                <img
                  src="{{ block.settings.image | image_url: width: 233 }}"
                  alt="{{ block.settings.alt_text | default: 'Instagram post' | escape }}"
                  loading="lazy"
                >
                {% comment %} {% endif %} {% endcomment %}
              {% endif %}
            </div>
          {% endfor %}
        </div>

        <div class="instagram-grid-row">
          {% for block in section.blocks limit: 3 offset: 4 %}
            <div class="instagram-grid-item" {{ block.shopify_attributes }}>
              {% if block.settings.image %}
                {% comment %}
                  {% if block.settings.url != blank %}
                    <a href="{{ block.settings.url }}"
                       {% if block.settings.open_in_new_tab %}target="_blank" rel="noopener noreferrer"{% endif %}>
                      <img src="{{ block.settings.image | image_url: width: 233 }}"
                           alt="{{ block.settings.alt_text | default: 'Instagram post' | escape }}"
                           loading="lazy">
                    </a>
                  {% else %}
                {% endcomment %}
                <img
                  src="{{ block.settings.image | image_url: width: 233 }}"
                  alt="{{ block.settings.alt_text | default: 'Instagram post' | escape }}"
                  loading="lazy"
                >
                {% comment %} {% endif %} {% endcomment %}
              {% endif %}
            </div>
          {% endfor %}
        </div>
      </div>

      {% comment %} Mobile-only images for second row {% endcomment %}
      <div class="instagram-mobile-second-row">
        <div class="instagram-mobile-small-images">
          {% for block in section.blocks limit: 2 offset: 3 %}
            <div class="instagram-mobile-small-item" {{ block.shopify_attributes }}>
              {% if block.settings.image %}
                {% comment %}
                  {% if block.settings.url != blank %}
                    <a href="{{ block.settings.url }}"
                       {% if block.settings.open_in_new_tab %}target="_blank" rel="noopener noreferrer"{% endif %}>
                      <img src="{{ block.settings.image | image_url: width: 112 }}"
                           alt="{{ block.settings.alt_text | default: 'Instagram post' | escape }}"
                           loading="lazy">
                    </a>
                  {% else %}
                {% endcomment %}
                <img
                  src="{{ block.settings.image | image_url: width: 112 }}"
                  alt="{{ block.settings.alt_text | default: 'Instagram post' | escape }}"
                  loading="lazy"
                >
                {% comment %} {% endif %} {% endcomment %}
              {% endif %}
            </div>
          {% endfor %}
        </div>

        {% if section.blocks.size > 5 %}
          {% assign last_image = section.blocks[5] %}
          <div class="instagram-mobile-large-item">
            {% if last_image.settings.image %}
              {% comment %} {% if last_image.settings.url != blank %} {% endcomment %}
              {% comment %}
                <a href="{{ last_image.settings.url }}"
                     {% if last_image.settings.open_in_new_tab %}target="_blank" rel="noopener noreferrer"{% endif %}>
                    <img src="{{ last_image.settings.image | image_url: width: 228 }}"
                         alt="{{ last_image.settings.alt_text | default: 'Instagram post' | escape }}"
                         loading="lazy">
                  </a>
                {% else %}
              {% endcomment %}
              <img
                src="{{ last_image.settings.image | image_url: width: 228 }}"
                alt="{{ last_image.settings.alt_text | default: 'Instagram post' | escape }}"
                loading="lazy"
              >
              {% comment %} {% endif %} {% endcomment %}
            {% endif %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Shop Our Instagram",
  "tag": "section",
  "class": "section section-instagram-feed",
  "settings": [
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#373a36"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#f1efed"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_left",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Left padding",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_right",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Right padding",
      "default": 80
    },
    {
      "type": "text",
      "id": "instagram_handle",
      "label": "Instagram handle",
      "default": "rinfitrings",
      "info": "Enter without @ symbol"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Instagram Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Instagram image"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Alt text",
          "default": "Instagram post"
        },

        {
          "type": "checkbox",
          "id": "open_in_new_tab",
          "label": "Open in new tab",
          "default": true
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Shop Our Instagram",
      "settings": {
        "instagram_handle": "rinfitrings"
      },
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}
