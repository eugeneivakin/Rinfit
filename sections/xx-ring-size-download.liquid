{% unless section.settings.show_on_desktop %}
  {% assign visibility_class = visibility_class | append: ' ring-sizing-tool--hide-desktop' %}
{% endunless %}
{% unless section.settings.show_on_mobile %}
  {% assign visibility_class = visibility_class | append: ' ring-sizing-tool--hide-mobile' %}
{% endunless %}

<section class="ring-sizing-tool{{ visibility_class }}">
  {% assign image_position = section.settings.image_position | default: 'left' %}
  
  {% if section.settings.video_image != blank %}
    <div class="ring-sizing-tool__video ring-sizing-tool__video--{{ image_position }}">
      <div class="ring-sizing-tool__video-container" id="video-container-{{ section.id }}">
        <!-- Thumbnail Image -->
        <img 
          src="{{ section.settings.video_image | image_url: width: 800 }}"
          alt="{{ section.settings.video_alt | default: 'Ring Sizing Tool Video' | escape }}"
          class="ring-sizing-tool__video-bg"
          id="video-thumbnail-{{ section.id }}"
          loading="lazy"
        >
        
        <!-- Video Player -->
        {% if section.settings.shopify_video != blank %}
          <video 
            class="ring-sizing-tool__video-player"
            id="video-player-{{ section.id }}"
            controls
            preload="metadata"
            playsinline
            muted
          >
            {% for source in section.settings.shopify_video.sources %}
              <source src="{{ source.url }}" type="{{ source.mime_type }}">
            {% endfor %}
            Your browser does not support the video tag.
          </video>
        {% elsif section.settings.video_url != blank %}
          {% assign video_id = '' %}
          {% if section.settings.video_url contains 'youtube.com' or section.settings.video_url contains 'youtu.be' %}
            {% if section.settings.video_url contains 'youtu.be' %}
              {% assign video_id = section.settings.video_url | split: 'youtu.be/' | last | split: '?' | first %}
            {% else %}
              {% assign video_id = section.settings.video_url | split: 'v=' | last | split: '&' | first %}
            {% endif %}
            <iframe
              class="ring-sizing-tool__video-player"
              id="video-player-{{ section.id }}"
              src="https://www.youtube.com/embed/{{ video_id }}"
              frameborder="0"
              allow="accelerometer; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
            ></iframe>
          {% elsif section.settings.video_url contains 'vimeo.com' %}
            {% assign video_id = section.settings.video_url | split: 'vimeo.com/' | last | split: '?' | first %}
            <iframe
              class="ring-sizing-tool__video-player"
              id="video-player-{{ section.id }}"
              src="https://player.vimeo.com/video/{{ video_id }}"
              frameborder="0"
              allow="fullscreen; picture-in-picture"
              allowfullscreen
            ></iframe>
          {% endif %}
        {% endif %}
        
        <!-- Play Button -->
        {% if section.settings.play_icon != blank %}
          <div class="ring-sizing-tool__play-button" id="play-button-{{ section.id }}">
            <img 
              src="{{ section.settings.play_icon | image_url }}"
              alt="Play video"
              class="ring-sizing-tool__play-icon"
            >
          </div>
        {% else %}
          <div class="ring-sizing-tool__play-button" id="play-button-{{ section.id }}">
            <svg class="ring-sizing-tool__play-icon" viewBox="0 0 54 54" fill="none">
              <circle cx="27" cy="27" r="27" fill="white" fill-opacity="0.9"/>
              <path d="M22 18L35 27L22 36V18Z" fill="#373a36"/>
            </svg>
          </div>
        {% endif %}
      </div>
    </div>
  {% endif %}
  
  {% assign text_position = 'right' %}
  {% if image_position == 'right' %}
    {% assign text_position = 'left' %}
  {% endif %}
  
  <div class="ring-sizing-tool__text ring-sizing-tool__text--{{ text_position }}">
    <div class="ring-sizing-tool__header">
      <h2 class="ring-sizing-tool__title">
        {% if section.settings.title_regular != blank %}
          {{ section.settings.title_regular }}
        {% endif %}
        {% if section.settings.title_italic != blank %}
          <span class="ring-sizing-tool__title-italic">{{ section.settings.title_italic }}</span>
        {% endif %}
      </h2>
      
      {% if section.settings.instructions != blank %}
        <div class="ring-sizing-tool__instructions">
          {{ section.settings.instructions }}
        </div>
      {% endif %}
    </div>
    
    {% if section.settings.show_button and section.settings.button_text != blank %}
      {% if section.settings.button_url != blank %}
        <a href="{{ section.settings.button_url }}" class="ring-sizing-tool__button" target="_blank">
          <span class="ring-sizing-tool__button-text">{{ section.settings.button_text }}</span>
        </a>
      {% else %}
        <button class="ring-sizing-tool__button" onclick="downloadTool{{ section.id }}()">
          <span class="ring-sizing-tool__button-text">{{ section.settings.button_text }}</span>
        </button>
      {% endif %}
    {% endif %}
  </div>
</section>

<script>
function initRingSizingVideo(containerId) {
  const videoContainer = document.getElementById(`video-container-${containerId}`);
  const videoThumbnail = document.getElementById(`video-thumbnail-${containerId}`);
  const videoPlayer = document.getElementById(`video-player-${containerId}`);
  const playButton = document.getElementById(`play-button-${containerId}`);

  if (!videoContainer || !videoPlayer || !playButton) return;

  function playVideo() {
    if (videoThumbnail) videoThumbnail.classList.add('hidden');
    playButton.classList.add('hidden');
    videoPlayer.classList.add('active');

    if (videoPlayer.tagName.toLowerCase() === 'video') {
      videoPlayer.muted = false;
      videoPlayer.play().catch(() => {
        videoPlayer.muted = true;
        videoPlayer.play();
      });
    }
  }

  playButton.addEventListener('click', playVideo);
  if (videoThumbnail) videoThumbnail.addEventListener('click', playVideo);

  if (videoPlayer.tagName.toLowerCase() === 'video') {
    videoPlayer.addEventListener('ended', () => {
      videoPlayer.classList.remove('active');
      if (videoThumbnail) videoThumbnail.classList.remove('hidden');
      playButton.classList.remove('hidden');
    });
  }
}

{% if section.settings.download_file != blank %}
function downloadTool{{ section.id }}() {
  const downloadUrl = '{{ section.settings.download_file }}';
  if (downloadUrl) {
    const link = document.createElement('a');
    link.href = downloadUrl;
    link.download = '';
    document.body.appendChild(link);
    link.click();
    document.body.removeChild(link);
  }
}
{% endif %}

// --- Виклик для сторінки ---
document.addEventListener('DOMContentLoaded', function() {
  initRingSizingVideo('{{ section.id }}');
});
</script>


