    display: none !important;
  }
  
  .ring-sizing-tool--hide-mobile {
    display: flex !important;
  }
  
  @media (min-width: 768px) {
    .ring-sizing-tool--hide-desktop {
      display: none !important;
    }
    
    .ring-sizing-tool--hide-mobile {
      display: flex !important;
    }
    
    .ring-sizing-tool {
      padding: 40px 80px;
      box-sizing: border-box;
      display: flex;
      gap: 40px;
      align-items: center;
      justify-content: flex-start;
    }
    
    .ring-sizing-tool__video {
      flex: 1;
      display: flex;
      flex-direction: column;
      gap: 10px;
      align-items: flex-start;
      justify-content: flex-start;
      border-radius: 10px;
      position: relative;
    }
    
    .ring-sizing-tool__video--right {
      order: 2;
    }
    
    .ring-sizing-tool__video--left {
      order: 1;
    }
    
    .ring-sizing-tool__video-container {
      position: relative;
      width: 100%;
      height: 460px;
      border-radius: 10px;
      overflow: hidden;
      cursor: pointer;
    }
    
    .ring-sizing-tool__video-bg {
      width: 100%;
      height: 100%;
      object-fit: cover;
      background: linear-gradient(90deg, rgba(0,0,0,0) 0%, rgba(0,0,0,0) 100%), 
                  linear-gradient(90deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0.1) 100%);
      transition: opacity 0.3s ease;
    }
    
    .ring-sizing-tool__video-bg.hidden {
      opacity: 0;
      pointer-events: none;
    }
    
    .ring-sizing-tool__video-player {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      border: none;
      border-radius: 10px;
      opacity: 0;
      pointer-events: none;
      transition: opacity 0.3s ease;
    }
    
    .ring-sizing-tool__video-player.active {
      opacity: 1;
      pointer-events: all;
    }
    
    .ring-sizing-tool__play-button {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 54px;
      height: 54px;
      cursor: pointer;
      z-index: 2;
      transition: opacity 0.3s ease;
    }
    
    .ring-sizing-tool__play-button.hidden {
      opacity: 0;
      pointer-events: none;
    }
    
    .ring-sizing-tool__play-icon {
      width: 100%;
      height: 100%;
    }
    
    .ring-sizing-tool__text {
      flex: 1;
      display: flex;
      flex-direction: column;
      gap: 60px;
      align-items: flex-start;
      justify-content: center;
      min-height: 1px;
      min-width: 1px;
    }
    
    .ring-sizing-tool__text--left {
      order: 1;
    }
    
    .ring-sizing-tool__text--right {
      order: 2;
    }
    
    .ring-sizing-tool__header {
      display: flex;
      flex-direction: column;
      gap: 40px;
      align-items: flex-start;
      justify-content: flex-start;
      width: 100%;
    }
    
    .ring-sizing-tool__title {
      text-transform: capitalize;
      font-weight: 300;
      line-height: 44px;
      color: #373a36;
      font-size: 46px;
      width: 100%;
    }
    
    .ring-sizing-tool__title-italic {
      font-family: 'Playfair Display', serif;
      font-style: italic;
      font-weight: normal;
      display: block; /* Forces line break */
    }
    
    .ring-sizing-tool__instructions {
      font-weight: normal;
      color: #373936;
      font-size: 14px;
      width: 100%;
    }
    
    .ring-sizing-tool__instructions ol {
      list-style-type: decimal;
      margin: 0;
      padding: 0;
    }
    
    .ring-sizing-tool__instructions li {
      margin-bottom: 5px;
      margin-left: 21px;
      line-height: 20px;
    }
    
    .ring-sizing-tool__instructions li:last-child {
      margin-bottom: 0;
    }
    
    .ring-sizing-tool__button {
      background-color: #232222;
      display: flex;
      gap: 10px;
      align-items: center;
      justify-content: flex-start;
      padding: 15px 20px;
      border-radius: 4px;
      text-decoration: none;
      cursor: pointer;
      border: 1px solid;
      transition: all 0.3s ease; 
    }
    .ring-sizing-tool__button span{
      transition: all 0.3s ease; 
    }
    .ring-sizing-tool__button:hover span{
      color: #232222;
    }
    .ring-sizing-tool__button:hover{
      background: none;
      border-color:#C5C1C0;
    }
    .ring-sizing-tool__button-text {
      font-family: 'Kumbh Sans', sans-serif;
      font-weight: 600;
      color: #ffffff;
      font-size: 14px;
      text-transform: uppercase;
      white-space: nowrap;
    }
