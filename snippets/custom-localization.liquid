<style>
.cloc.main-footer-localization {
  position: relative;
  font-family: "Kumbh Sans", sans-serif;
}

.cloc__control {
  background-color: white;
  border-radius: 5px;
}

.cloc__select-wrapper {
  position: relative;
  width: 197px;
  height: 52px;
}
@media (max-width: 768px){
  .cloc__select-wrapper {
    width: 100%;
  }
}
@media (min-width: 768px) and (max-width: 1024px) {
  #shopify-section-template--25322232611104__footer_custom_6BLMcf .pp-footer-container{
    gap: 100px;
  }
  .pp-footer-right{
    gap: 30px;
  }
  #shopify-section-template--25322232611104__footer_custom_6BLMcf .pp-footer-main{
    padding-left: 20px; 
  }
}
.cloc__label {
  position: absolute;
  top: 10px;
  left: 10px;
  font-weight: 400;
  font-size: 12px;
  color: #37393666;
}

.cloc__select {
  -webkit-appearance: none;
  -moz-appearance: none;
  appearance: none;
  width: 100%;
  height: 100%;
  border: 1px solid #37393633;
  border-radius: 4px;
  padding: 17px 30px 0 10px;
  font-size: 14px;
  font-weight: 400;
  background: none;
  outline: none;
}

.cloc__select:focus {
  border-color: #37393633;
}

.cloc__icon {
  position: absolute;
  right: 16px;
  top: 50%;
  transform: translateY(-50%);
  width: 10px;
  height: 10px;
  background: url('{{ "Icon.svg" | asset_url }}') no-repeat center;
  background-size: contain;
  transition: transform 0.3s ease;
  pointer-events: none;
}

.cloc__icon.rotated {
  transform: translateY(-50%) rotate(180deg);
}
</style>
{%- assign _show_name  = show_country_name | default: true -%}

{%- capture _form_id -%}loc-form-{{ id_prefix }}-{{ section.id }}-{{ type }}{%- endcapture -%}
<div class="cloc main-footer-localization" data-loc-type="{{ type }}">
  {% case type %}
  {% when 'country' %}
    <div class="cloc__control">
      {% form 'localization', id: _form_id %}
        <label for="CountrySelector" class="cloc__label">
          {{ 'general.localization.country' | t | default: 'Country' }}
        </label>
        <div class="cloc__select-wrapper">
          <select 
            id="CountrySelector" 
            name="country_code" 
            class="cloc__select" 
            aria-label="Country selector"
            onchange="this.form.submit()"
            onfocus="document.getElementById('loc-icon').classList.add('rotated')"
            onblur="document.getElementById('loc-icon').classList.remove('rotated')"
          >
            {% for country in localization.available_countries %}
              <option 
                value="{{ country.iso_code }}" 
                {% if country.iso_code == localization.country.iso_code %}selected{% endif %}
              >
                {{ country.name }} ({{ country.currency.iso_code }}{% if country.currency.symbol %} {{ country.currency.symbol }}{% endif %})
              </option>
            {% endfor %}
          </select>
          <span id="loc-icon" class="cloc__icon"></span>
        </div>
      {% endform %}
    </div>
  {% endcase %}
</div>