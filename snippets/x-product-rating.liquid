<div
  class="loox-rating"
  data-id="{{ product.id }}"
  data-rating="{{ product.metafields.loox.avg_rating }}"
  data-raters="{{ product.metafields.loox.num_reviews }}"
  data-pattern="&nbsp;"
>
  <div>
    <span class="loox-rating__value">{{ product.metafields.loox.avg_rating }}/5.00</span>
    <span class="loox-rating__counter">({{ product.metafields.loox.num_reviews }} reviews)</span>
  </div>
</div>
